# lexically sort filenames
--sort-files
--color
--context=1
--follow
--group

# add types ack doesn't know about

--type-add=ruby=rake,haml,ru
--type-add=vim=vimrc
--type-add=js=.json,.coffee
--type-set=css=.sass,.scss,.less
--type-add=elixir=.ex,.mix

--type-add=MARKDOWN=md,mkd,markdown
--type-add=RDOC=rdoc

--type-add=objc=.pch
--type-set=xcode=.pbxproj,.pbxuser,.perspectivev3
--type-set=ragel=.rl
--type-set=nib=.xib
--type-set=plist=.plist
--type-set=tmstuff=.tmproj,.tm_build_errors

--nonib
--notmstuff
--noxcode

# ignore common directories
--ignore-dir=log
--ignore-dir=snippets
--ignore-dir=sql_backup
--ignore-dir=coverage
