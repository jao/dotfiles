#!/usr/bin/env bash

DOTFILES=`pwd`
DOTFILES_DIR=`echo $DOTFILES | sed "s|$HOME/||"`

# Files to link
# .bash_completion.sh
# .bash_profile
# .bash_functions
# .gemrc
# .git_completion.sh
# .gitconfig
# .gitignore
# .aprc
# .rvmrc

cd $HOME

for FILE in "bash_profile" "bash_functions" "bash_completion" "gemrc" "git_completion" "git_prompt" "gitconfig" "gitignore" "aprc" "rvmrc"
do
  # removing existing file, if exists
  if [ -f .$FILE ]; then
    rm .$FILE
  fi
  
  # linking project file, if exists
  if [ -f $DOTFILES_DIR/$FILE ]; then
    ln -s $DOTFILES_DIR/$FILE .$FILE
  fi
  ls -laG .$FILE
done

# reading the profile
source .bash_profile
