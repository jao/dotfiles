[diff]
	color = true
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[alias]
  st = status
  ci = commit
  ca = commit -a
  cam = commit -a -m
[branch]
  autosetupmerge = true
[branch "master"]
  remote = origin
  merge = refs/heads/master
